# Application settings
DEBUG=false
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true

# OpenAI API Configuration
LLM_API_KEY=your_openai_api_key_here
LLM_API_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4

# To use a local LLM provider (like LM Studio, Ollama, etc.), use settings like these:
# LLM_API_KEY=not-needed  # Many local providers don't need an API key
# LLM_API_BASE_URL=http://localhost:8000/v1  # Local model API endpoint
# LLM_MODEL=llama-3-8b  # Name of the local model
# Paths
ASSETS_PATH=assets
DATA_PATH=data
STATIC_PATH=static

# Game settings
DEFAULT_LANGUAGE_LEVEL=beginner
MAX_DIALOG_HISTORY=50
ENABLE_DYNAMIC_DIALOG=true

# Japanese language settings
FURIGANA_ENABLED=true
ROMAJI_ENABLED=true

# Database settings
GAME_SAVES_PATH=data/game_saves
VOCABULARY_PATH=data/vocabulary.json

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Audio Processing Settings
# Uncomment and set these if you want to override defaults
# MAX_AUDIO_DURATION_SECONDS=1800  # 30 minutes
# WHISPER_MODEL=whisper-1
# GPT_MODEL=gpt-4-turbo 