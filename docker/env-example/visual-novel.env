# LLM API configuration
LLM_API_KEY=your_api_key_here
LLM_API_BASE_URL=https://api.openai.com/v1
LLM_MODEL=o3-mini
LLM_ENDPOINT_PATH=chat/completions

# Server configuration
PORT=3011

# Request timeout in milliseconds
REQUEST_TIMEOUT_MS=60000

# Debug settings (set to 'true' to enable detailed logs)
DEBUG_MODE=false

# Game settings
DEFAULT_LANGUAGE_LEVEL=beginner
MAX_DIALOG_HISTORY=50
ENABLE_DYNAMIC_DIALOG=true

# Japanese language settings
FURIGANA_ENABLED=true
ROMAJI_ENABLED=true 